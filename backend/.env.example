# Backend environment variables for QueueMe
# Copy to .env and fill values (never commit real secrets)

# Server
NODE_ENV=development
PORT=5000
PUBLIC_BASE_URL=http://localhost:5000
# Optional: if hosting frontend separately, the backend will redirect /customer/:slug
# FRONTEND_URL=https://your-frontend.example.com

# Database (Railway MySQL plugin maps to these)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=queueme
DB_POOL_LIMIT=10

# JWT
JWT_SECRET=change_me_to_a_long_random_string
JWT_EXPIRES_IN=7d

# Email (SendGrid)
# Enable only if you plan to send emails. When unset, emails are skipped gracefully.
# SENDGRID_API_KEY=
# EMAIL_FROM="QueueMe <no-reply@yourdomain.com>"

# SMS (PhilSMS)
# Enable only if you plan to send SMS. When unset, SMS are skipped gracefully.
# PHILSMS_API_KEY=
# PHILSMS_SENDER_ID=

# Payments (optional placeholders)
# PAYMONGO_PUBLIC_KEY=
# PAYMONGO_SECRET=
